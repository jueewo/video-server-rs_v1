# Multi-stage build for media-mcp
FROM rust:1.75-alpine AS builder

# Install build dependencies
RUN apk add --no-cache \
    musl-dev \
    openssl-dev \
    pkgconfig

# Set working directory
WORKDIR /app

# Copy Cargo files
COPY Cargo.toml Cargo.lock ./
COPY crates/ ./crates/

# Copy source code
COPY src/ ./src/
COPY migrations/ ./migrations/

# Build only the media-mcp binary
RUN cargo build --release -p media-mcp

# ============================================================================
# Final stage - Runtime image
# ============================================================================
FROM alpine:3.19

# Install runtime dependencies
RUN apk add --no-cache \
    sqlite \
    sqlite-libs \
    ca-certificates \
    tzdata

# Create app user
RUN addgroup -g 1000 mediaserver && \
    adduser -D -u 1000 -G mediaserver mediaserver

# Set working directory
WORKDIR /app

# Copy binary from builder
COPY --from=builder /app/target/release/media-mcp /app/media-mcp

# Ensure proper permissions
RUN chown -R mediaserver:mediaserver /app

# Switch to non-root user
USER mediaserver

# MCP servers communicate via stdio, no ports needed
# EXPOSE is not needed for MCP protocol

# Start the MCP server
CMD ["/app/media-mcp"]
